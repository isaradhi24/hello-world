pipeline {
    agent { label 'jenkins-agent' }
    tools {
        jdk 'Java17'
        maven 'Maven3'
    }

    stages {

        stage('Cleanup Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/isaradhi24/hello-world.git',
                    credentialsId: 'github'
            }
        }

        stage('Build Application') {
            steps {
                sh 'mvn clean package'
                echo 'Build Successful'
            }
        }

        stage('Test Application') {
            steps {
                echo 'Running Tests'
                sh 'mvn test'
                echo 'Tests Passed'
            }
        }

        stage('Deploy Application') {
            steps {
                echo 'Deploying Application'
    //            sh 'mvn deploy'   // Use "deploy" instead of "deployment"
                echo 'Skipping Deployment - no repository configured deploy stage Completed'
            }
        }
    }

    post {
        always {
            echo 'Pipeline Finished'
        }
        success {
            echo 'Pipeline Succeeded'
        }
        failure {
            echo 'Pipeline Failed'
        }
    }
}